{
  "name": "full-siora-mvp",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": "18.x"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "prisma generate --schema=./prisma/schema.prisma && turbo run build",
    "dev:web": "npm run dev -w apps/web",
    "build:web": "prisma generate --schema=./prisma/schema.prisma && npm run build -w apps/web",
    "lint": "turbo run lint",
    "start": "turbo run start",
    "generate:campaign": "node tools/campaign_flow.mjs",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "generate": "prisma generate",
    "vercel-build": "npm run build --workspace=web"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prisma": "^6.9.0",
    "tailwindcss": "^4.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "turbo": "latest",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@prisma/client": "^6.9.0",
    "framer-motion": "^12.6.3",
    "iconv-lite": "^0.6.3",
    "next": "^15.3.4",
    "pdfkit": "^0.15.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  }
}
